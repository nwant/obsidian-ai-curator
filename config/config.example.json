{
  "vaultPath": "/path/to/your/obsidian/vault",
  "ignorePatterns": [
    ".obsidian",
    ".git",
    ".trash",
    "_archived"
  ],
  "thresholds": {
    "similarityScore": 0.7,
    "minNoteLength": 50,
    "maxFragmentLength": 500
  },
  "dateFormat": "yyyy-MM-dd",
  "dailyNotesPath": "Daily",
  "dailyNoteDateFormat": "yyyy-MM-dd",
  "dailyNoteTemplate": "---\ndate: {{date}}\ntags: [daily-note]\n---\n\n# {{title}}\n\n## Tasks\n- [ ] \n\n## Notes\n\n\n## Reflections\n\n",
  "researchContext": {
    "description": "Configure your AI research partner's behavior and context",
    "contextDocuments": {
      "workflow": "/path/to/workflow.md",
      "guidelines": "/path/to/guidelines.md",
      "activeProjects": "/path/to/projects.md",
      "tagGuidelines": "/path/to/tag-guidelines.md"
    },
    "systemCapabilities": {
      "atomicRecords": true,
      "autonomousOperation": false
    },
    "customInstructions": "Additional instructions for your AI research partner"
  },
  "vaultWriteGuard": {
    "enabled": true,
    "logViolations": true,
    "description": "Prevents direct writes to vault, ensuring MCP tools are used"
  }
}