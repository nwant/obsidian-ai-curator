{
  "name": "obsidian-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Obsidian vault integration with Claude Desktop",
  "main": "src/mcp-server.js",
  "type": "module",
  "scripts": {
    "start": "node src/mcp-server.js",
    "dev": "node --watch src/mcp-server.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --selectProjects unit",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --selectProjects integration",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:coverage:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --selectProjects unit --coverage",
    "test:verbose": "cross-env NODE_OPTIONS=--experimental-vm-modules JEST_VERBOSE=1 jest --verbose",
    "test:harness": "node test/verify-harness.js",
    "test:status": "node test/test-status.js",
    "test:benchmark": "node test/benchmarks/vault-scale.benchmark.js",
    "test:github": "node scripts/test-github-integration.js",
    "build:plugin": "cd obsidian-ai-curator-plugin && npm run build",
    "dev:pre-release": "bash scripts/dev/pre-release-check.sh",
    "dev:quality": "bash scripts/dev/code-quality-check.sh",
    "setup:automation": "bash scripts/setup-automation.sh",
    "setup:local": "bash scripts/setup-local-claude.sh"
  },
  "keywords": [
    "obsidian",
    "mcp",
    "modelcontextprotocol",
    "claude",
    "knowledge-management"
  ],
  "author": "nwant",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "date-fns": "^4.1.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "simple-git": "^3.27.0",
    "uuid": "^9.0.1",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "cross-env": "^10.0.0",
    "dotenv": "^16.4.7",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
