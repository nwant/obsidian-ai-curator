{
  "name": "obsidian-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Obsidian vault integration with Claude Desktop",
  "main": "src/mcp-server.js",
  "type": "module",
  "scripts": {
    "start": "node src/mcp-server.js",
    "dev": "node --watch src/mcp-server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --selectProjects unit",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --selectProjects integration",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:coverage:unit": "NODE_OPTIONS=--experimental-vm-modules jest --selectProjects unit --coverage",
    "test:verbose": "NODE_OPTIONS=--experimental-vm-modules JEST_VERBOSE=1 jest --verbose",
    "test:harness": "node test/verify-harness.js",
    "test:status": "node test/test-status.js",
    "test:benchmark": "node test/benchmarks/vault-scale.benchmark.js",
    "build:plugin": "cd obsidian-ai-curator-plugin && npm run build"
  },
  "keywords": [
    "obsidian",
    "mcp",
    "modelcontextprotocol",
    "claude",
    "knowledge-management"
  ],
  "author": "nwant",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "date-fns": "^4.1.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "simple-git": "^3.27.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "dotenv": "^16.4.7",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
